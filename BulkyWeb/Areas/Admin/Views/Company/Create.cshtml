@model CompanyViewModel

<div class="card shadow border-0">
	<div class="card-header bg-secondary bg-gradient ml-0 py-2">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Create Company</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form asp-area="Admin" asp-controller="Company" asp-action="Create" method="post" class="row">
			<partial name="_AddEditCompanyHTMLPartial" model="Model" />
		</form>
	</div>
</div>

@section Scripts
{
	<partial name="_ValidationScriptsPartial" />
}