@section Styles
{
	<link href="//cdn.datatables.net/2.1.7/css/dataTables.dataTables.min.css" rel="stylesheet" />
}

<div class="card shadow border-0">
	<div class="card-header bg-secondary bg-gradient ml-0 py-2">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Company List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="text-end">
				<a asp-controller="Company" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> Create New Company
				</a>
			</div>
		</div>

		<!-- Responsive table wrapper -->
		<div class="table-responsive-sm">
			<table id="tblTable" class="table table-bordered table-striped">
				<thead>
					<tr>
						<th>Company Name</th>
						<th>Street Address</th>
						<th>City</th>
						<th>State</th>
						<th>PhoneNumber</th>
						<th>Action</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts
{
	<script src="//cdn.datatables.net/2.1.7/js/dataTables.min.js"></script>
	<script src="~/js/companies.js"></script>
}
