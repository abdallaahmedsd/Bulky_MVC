@model List<Category>

<div class="container">
	<div class="row pt-4 pb-3 align-items-center">
		<div class="col-6">
			<h1>Category List</h1>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus"></i> Create New Category</a>
		</div>
	</div>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Display Order</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.DisplayOrder</td>
					<td>
						<div class="w-57 btn-group" role="group">
							<a class="btn btn-warning mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
								<i class="bi bi-trash"></i>
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
