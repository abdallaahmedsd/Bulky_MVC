<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BulkyWeb</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
	<link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BulkyWeb.styles.css" asp-append-version="true" />

	@RenderSection("Styles", false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="Customer" asp-controller="Home" asp-action="Index">
					<img src="~/images/book.png" alt="logo" style="width: 40px" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Manage Orders</a>
						</li>

						@if (User.IsInRole(SD.Role_Admin))
						{
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Content Management
								</a>

								<ul class="dropdown-menu">
									<li>
										<a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="Admin" asp-controller="Book" asp-action="Index">Books</a>
									</li>
									<li>
										<a class="dropdown-item" asp-area="Admin" asp-controller="Company" asp-action="Index">Companies</a>
									</li>
									<li><hr class="dropdown-divider"></li>
									<li>
										<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Create User</a>
									</li>
								</ul>
							</li>
						}

						<li class="nav-item">
							<a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-area="Customer" asp-controller="Cart" asp-action="Index">
								@await Component.InvokeAsync("ShoppingCartQuantity")
							</a>
						</li>
					</ul>

					<partial name="_LoginPartial" />

				</div>
			</div>
		</nav>
	</header>
	<main class="main text-primary mt-4">
		<div class="container">
			@* Include notification partial view *@
			<partial name="_NotificationsPartial" />
			@RenderBody()
		</div>
	</main>

	<footer class="footer border-top bg-primary text-secondary text-center">
		<div class="container">
			Made with <i class="bi bi-heart-fill"></i> by Abdalla Ahmed
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/toastr.js/toastr.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/notifications.js" type="module"></script>
	<script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
